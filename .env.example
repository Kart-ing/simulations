# Environment Variables for AgentPay Simulation

# OpenAI API Key (required for Dedalus agents)
OPENAI_API_KEY=sk-your-api-key-here

# AgentPay Configuration
AGENTPAY_MODE=local  # 'local' for in-memory, 'remote' for API backend
# AGENTPAY_API_KEY=your-agentpay-key  # Only needed for remote mode
# AGENTPAY_API_URL=http://localhost:5001  # Only needed for remote mode

# Agent Configuration
DEFAULT_MODEL=openai/gpt-4  # Default model for Dedalus agents
ENABLE_STREAMING=true  # Enable streaming responses

# Marketplace Configuration
ENABLE_NEGOTIATION=false  # Enable price negotiation
DEFAULT_CURRENCY=USD
